@model CineAvanzada.Models.Compra
@{
    ViewBag.Title = "Compra";
    int contador = 1;
}
<head>
    @Styles.Render("~/Content/css")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script>
        $(function () {
            $(".butacas").click(function () {
                if ($(this).hasClass('boton_AsientoLibre')) {
                    $(this).removeClass('boton_AsientoLibre');
                    $(this).addClass('boton_AsientoEscogido');
                } else {
                    $(this).removeClass('boton_AsientoEscogido');
                    $(this).addClass('boton_AsientoLibre');
                }
            });
        })

    </script>
</head>
<body>
    <h2>Area de compra para la pelicula @Model.Pelicula.Nombre</h2>
    <h2>Fecha y Hora: @Model.Tanda.Fecha</h2>
    <h3>Sala @Model.Tanda.Salas_idSala</h3>
    <h3>Quedan @Model.Tanda.AsientosDisponibles asientos disponibles</h3>
    <h4>Seleccione los asientos que desea</h4>
    <br><br/>
    @for (int i = 0; i < 10; i++)
    {
        for (int j = 0; j < 10; j++)
        {
            bool bandera = false;
            foreach (var Asiento in Model.Asientos)
            {
                if (contador == Asiento.idAsiento)
                {
                    <input type="submit" class="boton_AsientoReservado" value="@contador" id="AsientoSalaOcupado" disabled/>
                    contador++;
                    bandera = true;
                }
            }
            if (bandera == false)
            {
                <input id="@contador.ToString()" type="button" class="butacas boton_AsientoLibre" value=@contador />
                contador++;
            }
        }
    }
    <button onclick="Seleccionar()">prueba</button>
</body>